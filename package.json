{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "adt": "cd packages/adt && yarn start",
    "sms": "cd packages/sms-reminders && yarn start",
    "core": "cd packages/core && tsc",
    "build": "lerna run build",
    "clean": "yarn clean:artifacts && yarn clean:packages && yarn clean:root",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean --yes",
    "clean:root": "rm -rf node_modules",
    "lerna-dockerize": "lerna-dockerize --template-dockerfile-name Dockerfile.template"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "lerna": "^4.0.0",
    "lerna-dockerize": "^0.8.4",
    "mysql": "^2.18.1"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "bluebird": "^3.7.2",
    "btoa": "^1.2.1",
    "moment": "^2.29.1",
    "redis-smq": "^6.2.6"
  }
}
